
@{
    ViewBag.Title = "NgonNguRazor";
}

<h2>NgonNguRazor</h2>
<h3>Biến</h3>
@{ 
    var name = "Nguyễn Văn Thạo";
    int age = 19;
    DateTime dt = DateTime.Now;

}
<p>Họ tên:@name</p>
<p>Tuổi:@age</p>
<p>Time:@dt</p>
<hr/>
<h3>Câu lệnh if</h3>
@{ 
    if(age > 40)
            {
                <p>già rồi</p>
            }
            else
            {
                <p>còn trẻ</p>
            }
}
<hr />
<h3>Loop: for, while, do...while, foreach...</h3>
@{ 
    int num = 10;
}
@for (int i = 0; i < num; i++)
            {
                <li>@i=>@i+@i</li>
            }
<h3>Mảng</h3>
@{ 
    string[] names = { "Nguyễn Văn A", "Bùi Thị B", "Trần Văn C", "Trịnh Văn T" };
}
@foreach (var item in ViewBag.names)
            {
                <p>@item</p>
            }